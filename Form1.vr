	EndSr
	
	BegSr ChangeInputStatus 
		DclSrParm Enabled Type(*Boolean) 
	
		textboxPassword.Enabled = Enabled 
		textboxDatabaseName.Enabled = Enabled 
		textboxUser.Enabled = Enabled 
		textboxPasswordAgain.Enabled = Enabled 
